h6
    font-size $tertiary-header-size
    font-weight 700
    padding 20px 0 0 0
    color $color-white
.project-name
    a
        span
            font-size $small-font-size
.borderless td
    border none
.borderless th
    background-color $color-maroon-primary
    color $color-white
.status-color
    &::after
        content ''
        width 50px
        height 20px
        margin-left 10px        
        position absolute
    &.green
        &::after
            background-color $color-green
    &.red
        &::after
            background-color $color-red
    &.orange
        &::after
            background-color $color-orange
    &.grey
        &::after
            background-color #d8d8d8
.table-responsive
    padding 0 35%
    text-align left
    margin-bottom 20px
    border none
    &.table-striped
        tbody
            tr:nth-of-type(odd)
                background-color rgba(0, 0, 0, 0.1)
    table
        border 1px solid #ccc
        a
            color #000
        .small
            padding-right 70px
            text-align right
